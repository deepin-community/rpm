+        sa->mpis = 2;
+        break;
+#ifdef EVP_PKEY_ED25519
+    case PGPPUBKEYALGO_EDDSA:
+        sa->setmpi = pgpSetSigMpiEDDSA;
+        sa->free = pgpFreeSigEDDSA;
+        sa->verify = pgpVerifySigEDDSA;
+        sa->mpis = 2;
+        break;
+#endif
+    default:
+        break;
+    }
