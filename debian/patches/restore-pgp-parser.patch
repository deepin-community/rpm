+int pgpPubKeyCertLen(const uint8_t *pkts, size_t pktslen, size_t *certlen)
+{
+    const uint8_t *p = pkts;
+    const uint8_t *pend = pkts + pktslen;
+    pgpPkt pkt;
+
+    while (p < pend) {
+	if (pgpDecodePkt(p, (pend - p), &pkt))
+	    return -1;
