+	if (rc == RPMPGP_OK && (pkt.body - pkt.head) + pkt.blen != pktlen)
+	    rc = RPMPGP_ERROR_CORRUPT_PGP_PACKET;
+    }
+
+exit:
+    if (ret && rc == RPMPGP_OK)
+	*ret = digp;
+    else {
+	if (lints)
+	    pgpAddLint(digp, lints, rc);
+	pgpDigParamsFree(digp);
+    }
+    return rc == RPMPGP_OK ? 0 : -1;
+}
