+static char *format_time(time_t *t)
+{
+    char dbuf[BUFSIZ];
+    struct tm _tm, *tms;
+    char *ret = NULL;
+
+    tms = localtime_r(t, &_tm);
+    if (!(tms && strftime(dbuf, sizeof(dbuf), "%Y-%m-%d %H:%M:%S", tms) > 0)) {
+	rasprintf(&ret, "Invalid date (%lld)", (long long int)t);
