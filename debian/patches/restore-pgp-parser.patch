+    rpmpgpRC rc = RPMPGP_ERROR_BAD_SIGNATURE;	/* assume failure */
+    struct pgpDigSigEDDSA_s *sig = pgpsig->data;
+
+    if (!sig)
+	sig = pgpsig->data = xcalloc(1, sizeof(*sig));
+    mlen -= 2;	/* skip mpi len */
